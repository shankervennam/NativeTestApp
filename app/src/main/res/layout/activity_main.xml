<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.rvennam.nativetestapp.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/frame_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp">
        </FrameLayout>

        <CheckBox
            android:id="@+id/chk_app_install"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="App install ads"/>

        <CheckBox
            android:id="@+id/chk_content_install"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Content Ads"/>

        <CheckBox
            android:id="@+id/chk_start_muted"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Muted Video Ads"/>

        <Button
            android:id="@+id/btn_refresh"
            android:text="hitme"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="16dp"/>

        <TextView
            android:id="@+id/tv_video_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>

    </LinearLayout>
</ScrollView>
